[x-cloak] {
	@apply hidden;
}
h1 {
	@apply text-4xl font-bold text-center;
}
h2 {
	@apply text-3xl font-bold uppercase mb-8;
}
h3 {
	@apply text-lg font-bold;
}
sub {
	@apply block text-xl uppercase text-center;
}
li, p {
	@apply py-1;
}
.link {
	@apply text-indigo-700 hover:text-indigo-800;
}
.hire-me-btn {
	@apply px-4 py-2 bg-indigo-700 hover:bg-indigo-800 text-white rounded-sm shadow;
}